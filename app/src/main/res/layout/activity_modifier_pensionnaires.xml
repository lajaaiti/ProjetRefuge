<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajouter_pensionnaires">


    <ImageView
        android:id="@+id/img_modifier_pensionnaires"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:src="@drawable/imgfond" />

    <EditText
        android:id="@+id/nom_modifier_pensionnaires"
        android:hint="Nom"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/espece_modifier_pensionnaires"
        android:hint="Espece"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/sexe_modifier_pensionnaires"
        android:hint="Sexe"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/num_enclo_modifier_pensionnaires"
        android:hint="N° Enclo"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/champtext" />
    <EditText
        android:id="@+id/age_modifier_pensionnaires"
        android:hint="Age"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/vaccin_modifier_pensionnaires"
        android:hint="Vaccin"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/mail_modifier_pensionnaires"
        android:hint="Mail"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/prorietaire_modifier_pensionnaires"
        android:hint="proprietaire"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/champtext" />


    <EditText
        android:id="@+id/telephone_modifier_pensionnaires"
        android:hint="Telephone"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/date_arrive_modifier_pensionnaires"
        android:hint="Date arrivé"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="415dp"
        android:background="@drawable/champtext" />
    <EditText
        android:id="@+id/date_sortie_modifier_pensionnaires"
        android:hint="Date sortie"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/champtext" />

    <EditText
        android:id="@+id/commentaire_modifier_pensionnaires"
        android:hint="Commentaire"
        android:layout_width="390dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="525dp"
        android:background="@drawable/champtext" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:text="Modifier"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="630dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:text="Sortie"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="630dp"/>




</RelativeLayout>