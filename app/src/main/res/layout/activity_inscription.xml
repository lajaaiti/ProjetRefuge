<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inscription">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="351dp"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logonoe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="272dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp">


        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="270dp">

            <EditText
                android:id="@+id/refuge_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray"
                android:hint="Nom du refuge"
                android:shadowRadius="@integer/material_motion_duration_medium_1" />

           <TextView
               android:id="@+id/textview1"
               android:layout_width="150dp"
               android:layout_height="35dp"
               android:layout_marginTop="45dp"
               android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/rna_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:background="@color/gray"
                android:hint="Code RNA" />
            <TextView
                android:id="@+id/textview2"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/mail_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:background="@color/gray"
                android:hint="Mail" />
            <TextView
                android:id="@+id/textview3"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="20dp"/>


            <EditText
                android:id="@+id/password_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:background="@color/gray"
                android:hint="Mot De Passe" />
            <TextView
                android:id="@+id/textview4"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="220dp"/>


            <EditText
                android:id="@+id/telephone_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="75dp"
                android:background="@color/gray"
                android:hint="telephone" />
            <TextView
                android:id="@+id/textview5"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="220dp"/>

            <EditText
                android:id="@+id/confirmez_inscription"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="150dp"
                android:background="@color/gray"
                android:hint="Confirmez" />
            <TextView
                android:id="@+id/textview6"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="220dp"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="550dp">

        <ImageView
            android:id="@+id/btn_inscription"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:rotation="22.5"
            android:src="@drawable/btn_inscription" />

    </LinearLayout>


</RelativeLayout>