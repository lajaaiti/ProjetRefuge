<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connexion">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="270dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="367dp"
            android:layout_height="262dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logonoe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="272dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/mail_connexion"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray"
                android:ems="10"
                android:hint="Mail"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/error_mail_connexion"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="60dp"
                android:textColor="#FF5722" />




            <EditText
                android:id="@+id/password_connexion"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="90dp"
                android:background="@color/gray"
                android:ems="10"
                android:hint="Mot De Passe"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/error_password_connexion"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="135dp"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/mot_de_passe_oublie_connexion"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="165dp"
                android:text="Mot de passe oubliÃ©?"
                android:textAlignment="center" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="520dp">

        <ImageView
            android:id="@+id/btn_connexion_connexion"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="215dp"
            android:rotation="-22.5"
            android:src="@drawable/btn_connexion" />

    </LinearLayout>


</RelativeLayout>